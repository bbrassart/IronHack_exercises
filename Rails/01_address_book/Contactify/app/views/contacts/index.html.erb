<title>Contactify</title>

<div class="container">
	<div class="row">
		<h2>Find all your contacts here</h2>
		<h3>Click on the contact name to access all the info</h3>
	</div>
	<div class="row">
		<div class="col-md-5">
			<ul>
  			<% @contacts.each do |contact| %>
  				<li><%= link_to contact.name, contact_path(contact) %></li>
					<% if contact.favourite == true %>
						<%= form_tag("/contacts/del_favourite", class:"btn") do %>
						<%= hidden_field_tag(:id, contact.id) %>
						<%= submit_tag("Delete favourite") %>
						<% end %>
					<%else%>
						<%= form_tag("/contacts/favourite", class:"btn") do %>
						<%= hidden_field_tag(:id, contact.id) %>
						<%= submit_tag("Mark as favourite") %>
						<% end %>
					<% end %>
				<%end%>
			</ul>
			<ul>
				<li><b> <%= link_to 'Create a new contact', new_contact_path %></b></li>
			</ul>
		</div>
		<div class="col-md-7">

			<ul>
				<li><b><%= link_to 'Show all your favourites', contacts_show_favourites_path %></b></li>
			</ul>
		</div>
	</div>
</div>
